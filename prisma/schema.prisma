generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CreatorStatus {
  PENDING
  APPROVED
  REJECTED
}

enum ProfileStatus {
  PENDING
  APPROVED
  REJECTED
}
enum BrandStatus {
  PENDING
  APPROVED
  REJECTED
}

enum CollabStatus {
  PENDING
  APPROVED
  REJECTED
}

model BrandProfile {
  id          String      @id @default(uuid())
  userId      String      @unique
  phoneNumber String      @unique

  brandName   String
  pan         String
  gstin       String?
  city        String?
  state       String?

  status      BrandStatus @default(PENDING)
  createdAt   DateTime    @default(now())

  user            AppUser          @relation(fields: [userId], references: [id], onDelete: Cascade)
  collabRequests  CollabRequest[]

  @@index([status])
  @@index([createdAt])
}


enum UserRole {
  ADMIN
}

enum AppUserRole {
  CREATOR
  BRAND
}

model AppUser {
  id          String      @id @default(cuid())
  phoneNumber String      @unique
  role        AppUserRole // âœ… correct
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())

  brandProfile   BrandProfile?
  creatorProfile Creator?
}

model OtpSession {
  id          String   @id @default(uuid())
  phoneNumber String
  otpHash     String
  expiresAt   DateTime
  verifiedAt  DateTime?
  createdAt   DateTime @default(now())

  @@index([phoneNumber])
}

model AdminUser {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         UserRole @default(ADMIN)
  createdAt    DateTime @default(now())
}
model Creator {
  id          String        @id @default(uuid())
  userId      String        @unique
  phoneNumber String        @unique

  name                  String
  email                 String        @unique
  location              String?
  creatorName           String?
  industry              String?
  adsPreference         String?
  primaryPlatform       String?
  socialLinks           Json? // Store multiple platform links
  followerCount         Int?
  profilePicture        String?
  bio                   String?
  collaborationInterests String?
  
  // Fields for unique key generation
  state                 String?
  district              String?
  language              String?
  uniqueKey             String?        @unique

  instagram             String? // Keep for backward compatibility or remove if covered by socialLinks
  category              String? // Keep for backward compatibility or remove if covered by industry

  status      CreatorStatus @default(PENDING)
  createdAt   DateTime      @default(now())

  user            AppUser          @relation(fields: [userId], references: [id], onDelete: Cascade)
  collabRequests  CollabRequest[]

  @@index([createdAt])
  @@index([status])
  @@index([uniqueKey])
}

model CollabRequest {
  id          String      @id @default(uuid())
  brandId     String
  creatorId   String
  requirement String
  budget      String?
  timeline    String?
  message     String?
  status      CollabStatus @default(PENDING)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  brand       BrandProfile @relation(fields: [brandId], references: [id], onDelete: Cascade)
  creator     Creator      @relation(fields: [creatorId], references: [id], onDelete: Cascade)

  @@index([creatorId])
  @@index([brandId])
}

